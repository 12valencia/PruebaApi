@page
@model CRMAPP.Pages.Customers.Index
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<h2 class="text-center mb-3">Lista de Clientes</h2>

<a class="btn btn-primary mb-3" href="/Customers/Create">New Customers</a>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Created At</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model.CustomersList){
            <tr>
                <td>@customer.Id</td>
                <td>@(customer.Firstname + " " + customer.Lastname)</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Company</td>
                <td>@customer.CreatedAt</td>
              <td style="white-spcae:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Customers/Edit?id=@customer.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Customers/Delete?id=@customer.Id">Delete</a>
                </td>
               
            </tr>
            
        }
    </tbody>
</table>